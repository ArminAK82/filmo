<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.titel</title>

    <!-- تیلویند CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- فونت آوسم CDN -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- سوییپر جی‌اس CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

    <!-- لینک به فایل CSS -->
    <link rel="stylesheet" href="~/style/styles.css" />
</head>
<body class="bg-gray-100">
    <header class="bg-gray-900 text-white p-4 shadow-md sticky top-0 z-50">
        <div class="mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold">@ViewBag.titel</h1>

            <!-- منوی دسکتاپ -->
            <nav class="hidden md:block">
                <ul class="flex space-x-4">
                    <li><a href="#" class="hover:text-blue-200">خانه</a></li>
                    <li><a href="#" class="hover:text-blue-200 mr-4">فیلم‌ها</a></li>
                    <li><a href="#" class="hover:text-blue-200 mr-4">سریال‌ها</a></li>
                    <li><a href="#" class="hover:text-blue-200 mr-4">درباره ما</a></li>
                    <li>
                        <a href="login.html"
                           class="hover:text-blue-200 border-2 border-white rounded-md p-2 hover:bg-white hover:text-blue-600 transition-all duration-300 ease-linear">ورود / ثبت نام</a>
                    </li>
                </ul>
            </nav>

            <!-- دکمه منوی موبایل -->
            <button class="mobile-menu-button md:hidden">
                <i class="fas fa-bars text-2xl"></i>
            </button>
        </div>

        <!-- منوی کشویی موبایل -->
        <div class="mobile-menu hidden">
            <nav>
                <ul class="mobile-menu-items grid grid-cols-2 items-center mt-5">
                    <div class="flex flex-col gap-2 justify-between">
                        <li><a href="#" class="mobile-menu-item">خانه</a></li>
                        <li><a href="#" class="mobile-menu-item">فیلم‌ها</a></li>
                        <li><a href="#" class="mobile-menu-item">سریال‌ها</a></li>
                        <li><a href="#" class="mobile-menu-item">درباره ما</a></li>
                    </div>

                    <li class="ms-auto">
                        <a href="login.html"
                           class="mobile-menu-item border-2 border-white rounded-md p-2 mt-4 inline-block hover:bg-white hover:text-blue-600 transition-all duration-300 ease-linear">ورود / ثبت نام</a>
                    </li>
                </ul>
            </nav>
        </div>

        <!-- پس‌زمینه تیره هنگام باز بودن منو -->
        <div class="mobile-menu-overlay"></div>
    </header>

    @RenderBody()

    @Html.Partial("~/Views/parts/_PartialFooter.cshtml")
    <!-- لینک به فایل جاوااسکریپت -->
    <script src="~/style/script.js"></script>
</body>
</html>
