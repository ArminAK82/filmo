<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.titel</title>

    <!-- تیلویند CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- فونت آوسم CDN -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- سوییپر جی‌اس CDN -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

    <!-- لینک به فایل CSS -->
    <link rel="stylesheet" href="~/style/styles.css" />
</head>
<body class="bg-gray-100">
    <header class="bg-gray-900 text-white p-4 shadow-md sticky top-0 z-50">
        <div class="mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold">فیلمو</h1>

            <!-- منوی دسکتاپ -->
            <nav class="hidden md:block">
                <ul class="flex space-x-4">
                    <li><a href="#" class="hover:text-blue-200">خانه</a></li>
                    <li><a href="#" class="hover:text-blue-200 mr-4">فیلم‌ها</a></li>
                    <li><a href="#" class="hover:text-blue-200 mr-4">سریال‌ها</a></li>
                    <li><a href="#" class="hover:text-blue-200 mr-4">درباره ما</a></li>
                    <li>
                        <a href="login.html"
                           class="hover:text-blue-200 border-2 border-white rounded-md p-2 hover:bg-white hover:text-blue-600 transition-all duration-300 ease-linear">ورود / ثبت نام</a>
                    </li>
                </ul>
            </nav>

            <!-- دکمه منوی موبایل -->
            <button class="mobile-menu-button md:hidden">
                <i class="fas fa-bars text-2xl"></i>
            </button>
        </div>

        <!-- منوی کشویی موبایل -->
        <div class="mobile-menu hidden">
            <nav>
                <ul class="mobile-menu-items grid grid-cols-2 items-center mt-5">
                    <div class="flex flex-col gap-2 justify-between">
                        <li><a href="#" class="mobile-menu-item">خانه</a></li>
                        <li><a href="#" class="mobile-menu-item">فیلم‌ها</a></li>
                        <li><a href="#" class="mobile-menu-item">سریال‌ها</a></li>
                        <li><a href="#" class="mobile-menu-item">درباره ما</a></li>
                    </div>

                    <li class="ms-auto">
                        <a href="login.html"
                           class="mobile-menu-item border-2 border-white rounded-md p-2 mt-4 inline-block hover:bg-white hover:text-blue-600 transition-all duration-300 ease-linear">ورود / ثبت نام</a>
                    </li>
                </ul>
            </nav>
        </div>

        <!-- پس‌زمینه تیره هنگام باز بودن منو -->
        <div class="mobile-menu-overlay"></div>
    </header>

    @RenderBody()

    <footer class="bg-green-100 py-8 px-4 text-black">
        <div class="max-w-7xl mx-auto">
            <div class="grid grid-cols-4 gap-8">
                <!-- ستون اول -->
                <div>
                    <h3 class="text-lg font-bold mb-4">فروشگاه فیلمو</h3>
                    <ul>
                        <li class="mb-2">
                            <a href="#" class="hover:text-green-800">اشتراک ویژه</a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="hover:text-green-800">فیلم‌های پرطرفدار</a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="hover:text-green-800">سریال‌های محبوب</a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="hover:text-green-800">مستندهای جذاب</a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="hover:text-green-800">فیلمو شاپ</a>
                        </li>
                    </ul>
                </div>

                <!-- ستون دوم -->
                <div>
                    <h3 class="text-lg font-bold mb-4">آموزش و راهنما</h3>
                    <ul>
                        <li class="mb-2">
                            <a href="#" class="hover:text-green-800">داستان ما</a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="hover:text-green-800">راهنمای کاربران</a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="hover:text-green-800">بخش دانلود</a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="hover:text-green-800">مقالات سینمایی</a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="hover:text-green-800">سوالات متداول</a>
                        </li>
                    </ul>
                </div>

                <!-- ستون سوم -->
                <div>
                    <h3 class="text-lg font-bold mb-4">دنیای فیلمو</h3>
                    <ul>
                        <li class="mb-2">
                            <a href="#" class="hover:text-green-800">عضویت تجاری</a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="hover:text-green-800">فرصت‌های همکاری</a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="hover:text-green-800">تولیدکنندگان محتوا</a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="hover:text-green-800">قوانین و مقررات</a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="hover:text-green-800">تماس با ما</a>
                        </li>
                    </ul>
                </div>

                <!-- ستون چهارم -->
                <div>
                    <h3 class="text-lg font-bold mb-4">پشتیبانی ۲۴ ساعته</h3>
                    <p class="mb-4">
                        برای اطلاع از تازه‌ترین فیلم‌ها و سریال‌ها عضو خبرنامه ما شوید
                    </p>
                    <div class="flex">
                        <input type="email"
                               placeholder="ایمیل خود را وارد کنید"
                               class="p-2 rounded-l-none rounded-lg w-full bg-white text-gray-800" />
                        <button class="bg-green-700 p-2 text-white rounded-l-lg rounded-r-none hover:bg-green-800">
                            عضویت
                        </button>
                    </div>
                    <div class="flex mt-4 gap-4">
                        <a href="#" class="text-green-800 hover:text-green-900">
                            <i class="fab fa-instagram text-xl"></i>
                        </a>
                        <a href="#" class="text-green-800 hover:text-green-900">
                            <i class="fab fa-twitter text-xl"></i>
                        </a>
                        <a href="#" class="text-green-800 hover:text-green-900">
                            <i class="fab fa-facebook text-xl"></i>
                        </a>
                        <a href="#" class="text-green-800 hover:text-green-900">
                            <i class="fab fa-youtube text-xl"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="mt-8 pt-8 border-t border-green-200 text-center">
                <p>© ۱۴۰۲ فیلمو - تمامی حقوق محفوظ است</p>
            </div>
        </div>
    </footer>

    <!-- لینک به فایل جاوااسکریپت -->
    <script src="~/style/script.js"></script>
</body>
</html>
